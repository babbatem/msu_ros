           env('base_cam_x_rot') + ' ' +
           env('base_cam_y_rot') + ' ' +
           env('base_cam_z_rot') + ' ' +
           env('base_cam_w_rot') + ' ' +
           '/world /base_cam_link 100'
       )"/> -->

</launch>
