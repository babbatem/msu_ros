<!-- Launch in the camera namespace containing "image_raw" and "camera_info" -->
<launch>

  <!-- Nodelet manager for this pipeline -->
   <node pkg="nodelet" type="nodelet" args="manager"
         name="cam_manager" output="screen"/>

  <!-- pointcloud. -->
  <node pkg="nodelet" type="nodelet" name="cloudy0"
        args="load depth_image_proc/point_cloud_xyz cam_manager --no-bond">
    <remap from="camera_info" to="cam_0_info" />
    <remap from="image_rect" to="depth0" />
    <remap from="points" to="points0"/>
  </node>

  <!-- pointcloud. -->
  <node pkg="nodelet" type="nodelet" name="cloudy1"
        args="load depth_image_proc/point_cloud_xyz cam_manager --no-bond">
    <remap from="camera_info" to="cam_1_info" />
    <remap from="image_rect" to="depth1" />
    <remap from="points" to="points1"/>
  </node>

  <!-- pointcloud. -->
  <node pkg="nodelet" type="nodelet" name="cloudy2"
        args="load depth_image_proc/point_cloud_xyz cam_manager --no-bond">
    <remap from="camera_info" to="cam_2_info" />
    <remap from="image_rect" to="depth2" />
    <remap from="points" to="points2"/>
  </node>


  <!-- <node pkg="tf" type="static_transform_publisher" name="tf_pub_base_cam_frame"
       args= "$(eval
           env('base_cam_x_pos') + ' ' +
           env('base_cam_y_pos') + ' ' +
